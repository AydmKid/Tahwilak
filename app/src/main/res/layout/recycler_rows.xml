<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:padding="5dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        card_view:cardCornerRadius="40dp"
        card_view:cardElevation="3dp"
        android:foregroundGravity="center"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/mynumber"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/mytime"
                android:layout_alignStart="@+id/mytime"
                android:layout_marginBottom="18dp"
                android:gravity="start"
                android:text="Number" />

            <TextClock
                android:id="@+id/mytime"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="28dp"
                android:text="ali"
                android:textSize="20sp"


                />




            <TextView
                android:id="@+id/amount"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/mynumber"
                android:layout_alignBottom="@+id/mynumber"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:gravity="end"
                android:text="Amount" />




    <!--<View-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="60sp"-->
        <!--android:background="@color/color10"-->
        <!--android:id="@+id/view">-->
    <!--</View>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>







</RelativeLayout>